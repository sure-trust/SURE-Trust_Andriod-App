<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.suretrustofficial.suretrust.presentation.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_exploreCourseFragment"
            app:destination="@id/exploreCourseFragment" />
        <action
            android:id="@+id/action_homeFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.suretrustofficial.suretrust.presentation.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.suretrustofficial.suretrust.presentation.about.AboutFragment"
        android:label="About us"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/documentsFragment"
        android:name="com.suretrustofficial.suretrust.presentation.document.DocumentsFragment"
        android:label="Documents"
        tools:layout="@layout/fragment_documents" />
    <fragment
        android:id="@+id/exploreCourseFragment"
        android:name="com.suretrustofficial.suretrust.presentation.explore.ExploreCourseFragment"
        android:label="Explore Courses"
        tools:layout="@layout/fragment_explore_course" />
    <fragment
        android:id="@+id/guidanceFragment"
        android:name="com.suretrustofficial.suretrust.presentation.guidance.GuidanceFragment"
        android:label="Our Approach"
        tools:layout="@layout/fragment_guidance" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.suretrustofficial.suretrust.presentation.auth.SignupFragment"
        android:label="Register"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signupFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/internshipZoneFragment"
        android:name="com.suretrustofficial.suretrust.presentation.internship.InternshipZoneFragment"
        android:label="Internship Zone"
        tools:layout="@layout/fragment_internship_zone" />
    <fragment
        android:id="@+id/placementCellFragment"
        android:name="com.suretrustofficial.suretrust.presentation.placement.PlacementCellFragment"
        android:label="Placement cell"
        tools:layout="@layout/fragment_placement_cell" />
    <fragment
        android:id="@+id/aboutDeveloperFragment"
        android:name="com.suretrustofficial.suretrust.presentation.about.AboutDeveloperFragment"
        android:label="About the developer"
        tools:layout="@layout/fragment_about_developer" />
    <fragment
        android:id="@+id/lifeSkillsFragment"
        android:name="com.suretrustofficial.suretrust.presentation.skills.LifeSkillsFragment"
        android:label="Life skills training"
        tools:layout="@layout/fragment_life_skills" />
    <fragment
        android:id="@+id/researchFragment"
        android:name="com.suretrustofficial.suretrust.presentation.research.ResearchFragment"
        android:label="Research Guidance"
        tools:layout="@layout/fragment_research" />
</navigation>