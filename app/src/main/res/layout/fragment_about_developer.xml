<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_background"
    tools:context=".presentation.about.AboutDeveloperFragment">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cover_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_developer"
            app:civ_border_color="@color/primary_blue"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lexend_deca"
            android:text="Subhadip Das"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cover_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:fontFamily="@font/lexend_deca"
            android:text="Android Developer | Trainer at SURE trust"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/about">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/linkedin_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/ic_linkedin" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/gmail_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/ic_gmail" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/github_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/ic_github" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
