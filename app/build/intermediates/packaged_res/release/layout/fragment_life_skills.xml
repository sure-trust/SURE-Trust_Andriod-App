<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    tools:context=".presentation.skills.LifeSkillsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/lexend_deca"
        android:text="SURE Trust"
        android:textAlignment="center"
        android:textColor="@color/primary_blue"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_deca"
        android:text="Life skills training"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/name_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/about_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:alpha="0.5"
        android:text="We at SURE Trust, encourage you to post your skills and talent. However, while posting your talents as an image or video, please make sure to read the guidelines"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/desc_tv" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_containers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/about_section">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fill_form_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_bg_purple"
            android:fontFamily="@font/lexend_deca"
            android:paddingHorizontal="12dp"
            android:text="Fill the form"
            android:textAllCaps="false"
            android:textColor="@color/primary_background"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/read_guidelines_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:background="@drawable/bordered_purple_btn"
            android:fontFamily="@font/lexend_deca"
            android:paddingHorizontal="12dp"
            android:text="Read Guidelines"
            android:textAllCaps="false"
            android:textColor="#9D9999"
            android:textSize="14sp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>