<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:scrollbars="none"
    tools:context=".presentation.internship.InternshipZoneFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_background"
        android:paddingBottom="48dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/heading_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/lexend_deca"
            android:text="SURE Trust - IERY"
            android:textAlignment="center"
            android:textColor="@color/primary_blue"
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_heading_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:fontFamily="@font/lexend_deca"
            android:text="Innovation &amp; Entrepreneurship Hub for Educated Rural Youth"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/heading_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_sub_heading_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="56dp"
            android:layout_marginTop="8dp"
            android:alpha="0.5"
            android:fontFamily="@font/lexend_deca"
            android:text="Gain hands-on experience through executive-led internships which are open to 3rd/4th year B.Tech, MCA, MBA, and PG/Ph.D. students."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/sub_heading_tv" />

        <WebView
            android:id="@+id/internship_zone_player_view"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/sub_sub_heading_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/section_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/lexend_deca"
            android:text="Internship Projects at SURE Trust"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/internship_zone_player_view" />

        <View
            android:id="@+id/section_title_underline"
            android:layout_width="124dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/primary_purple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/section_title_tv" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/compose_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/section_title_underline" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>